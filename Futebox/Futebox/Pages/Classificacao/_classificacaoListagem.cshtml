@model ClassificacaoModel.PartialModel
@{
    Dictionary<string, string> classes = new Dictionary<string, string>()
    {
        {"azul", "badge bg-info"},
        {"laranja", "badge bg-warning"},
        {"verde", "badge bg-success"},
        {"branco", "badge bg-white"},
        {"vermelho", "badge bg-danger"},
    };
    var ObterDestaque = new Func<string, string>((s) => string.IsNullOrEmpty(s) ? "" : classes.ContainsKey(s) ? classes[s] : classes["branco"]);
}
@{
    var socialIGV = (int)Futebox.Models.Enums.RedeSocialFinalidade.InstagramVideo;
    var socialYTV = (int)Futebox.Models.Enums.RedeSocialFinalidade.YoutubeVideo;
    //var socialYTS = (int)Futebox.Models.Enums.RedeSocialFinalidade.YoutubeShorts;
    var grouped = Model.classificacao.GroupBy(_ => _.grupo);
    var deparaGruposXColunas = new Dictionary<int, int>
    {
        // Quantidade Grupos x Tamanho Coluna
        { 1, 12 },
        { 2, 6 },

        { 3, 4 },
        { 4, 3 },

        { 5, 4 },
        { 6, 4 },

        { 7, 3 },
        { 8, 3 },
    };
}
<hr />


<div class="row">
    @foreach (var grupo in grouped)
    {
        <div class="col-@(deparaGruposXColunas[grouped.Count()])">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" data-grupo="@(grupo.Key)">
                            </div>
                        </td>
                        <td colspan="4">Grupo @grupo.Key</td>
                    </tr>
                    <tr>
                        <td class="">#</td>
                        <td class="">Clube</td>
                        <td class="">PTS</td>
                        <td class="">PJ</td>
                        <td class="">VIT</td>
                    </tr>
                </thead>
                @foreach (var time in grupo)
                {
                    <tr class="corpo">
                        <td class="">
                            @(time.posicao)º
                        </td>
                        <td class="">
                            <div>
                                <img width="32" src='@(time.time.ObterLogoLocal())' onerror="if (this.src != 'error.jpg') this.src = 'data:image/png;base64, @time.brasao';" />
                                <div class="">@time.clube</div>
                            </div>
                        </td>
                        <td class="">@time.pontos</td>
                        <td class="">@time.partidasJogadas</td>
                        <td class="">@time.vitorias</td>
                    </tr>
                }
            </table>
        </div>
    }
</div>
<hr />

<table class="table table-striped table-borderless table-responsive">
    <tr>
        <td colspan="2">
            <div data-config="@(socialYTV)">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="social-@(socialYTV)" data-social="@(socialYTV)">
                    <label class="form-check-label" for="social-@(socialYTV)">Youtube Videos</label>
                </div>
                <div class="input-group input-group-sm">
                    <select name='viewName' class='form-select form-select-sm'>
                        <optgroup label='defaults'>
                            <option value='_classificacaoSemGrupos' selected="selected">Padrão (class. s/g)</option>
                        </optgroup>
                    </select>
                    <button class="btn btn-outline-secondary" onclick="VisualizarMiniatura('@(socialYTV)', 1920, 1080)" type="button">Simular</button>
                </div>
                <hr />
                <div class="input-group input-group-sm">
                    <span class="input-group-text">Titulo</span>
                    <input type="text" class="form-control form-control-sm" name="title" value="@($"Classificação {Model.nomeCampeonato} {DateTime.Now.ToString("yyyy")} - Atualizada {DateTime.Now.ToString("dd/MM/yyyy")}")">
                </div>
                <hr />
                <div class="input-group input-group-sm">
                    <span class="input-group-text">Titulo</span>
                    <input type="date" class="form-control form-control-sm" name="dataExecucao" value="@(DateTime.Now.ToString("yyyy-MM-dd"))">
                </div>
            </div>
        </td>
        <td colspan="2">
            <div data-config="@(socialIGV)">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="social-@(socialIGV)" data-social="@(socialIGV)">
                    <label class="form-check-label" for="social-@(socialIGV)">Instagram Videos</label>
                </div>
                <div class="input-group input-group-sm">
                    <select name='viewName' class='form-select form-select-sm'>
                        <optgroup label='defaults'>
                            <option value='_classificacaoSemGrupos' selected="selected">Padrão (class. s/g)</option>
                        </optgroup>
                    </select>
                    <button class="btn btn-outline-secondary" onclick="VisualizarMiniatura('@(socialIGV)', 1350, 1920)" type="button">Simular</button>
                </div>
                <hr />
                <div class="input-group input-group-sm">
                    <span class="input-group-text">Titulo</span>
                    <input type="text" class="form-control form-control-sm" name="title" value="@($"Classificação {Model.nomeCampeonato} {DateTime.Now.ToString("yyyy")} - Atualizada {DateTime.Now.ToString("dd/MM/yyyy")}")">
                </div>
                <hr />
                <div class="input-group input-group-sm">
                    <span class="input-group-text">Titulo</span>
                    <input type="date" class="form-control form-control-sm" name="dataExecucao" value="@(DateTime.Now.ToString("yyyy-MM-dd"))">
                </div>
            </div>
        </td>
    </tr>
    <tr>
        <td colspan="6" align="right">
            <button id="btnProcesso" onclick="GerarProcesso()" class="btn btn-sm btn-dark">Processo</button>
        </td>
    </tr>
</table>