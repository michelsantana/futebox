@model Futebox.Pages.MiniaturasModel.PartidaHandlerModel
@{
    var w = $"{Model.width}";
    var h = $"{Model.height}";
    w = string.IsNullOrEmpty(w) ? "1920" : w;
    h = string.IsNullOrEmpty(h) ? "1080" : h;
}
@if (false)
{
    <style>
        #mini-body {
            outline: 2px solid #F00;
        }

        #mini-header {
            outline: 2px solid #0F0;
        }

        #mini-footer {
            outline: 2px solid #00F;
        }
    </style>
}
<style>
    #mini-container {
        width: @($"{w}px");
        height: @($"{h}px");
    }
</style>
<style>
    .mini-row {
        height: @($"{100}%");
    }
    .mini-col {
        padding: 5px;
        width: @($"{100}%");
    }
</style>
<style>
    body {
    }

    #mini-container {
        position: absolute;
        top: 0;
        left: 0;
        background: rgba(97,227,82,1);
        padding: 5px;
        z-index: 999999;
        text-shadow: 2px 2px 0 #fff, 2px -2px 0 #fff, -2px 2px 0 #fff, -2px -2px 0 #fff, 2px 0px 0 #fff, 0px 2px 0 #fff, -2px 0px 0 #fff, 0px -2px 0 #fff;
    }

    #mini-header {
        font-size: 70px;
        font-weight: bold;
        text-align: center;
        height: 10%;
        white-space: nowrap;
        padding: 0 10px;
    }

    #mini-body {
        height: 80%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    #mini-table {
        table-layout: fixed;
        width: 100%;
        height: 100%;
    }

    .mini-row {
        display: flex;
        flex-direction: row;
        align-items: stretch;
        justify-content: space-around;
    }

    #mini-footer {
        font-weight: bold;
        text-align: center;
        height: 10%;
        display: flex;
        align-content: center;
        justify-content: center;
        align-items: center;
       
    }
</style>
<div id="mini-container" class="fs-sport">
    <div id="mini-header" class="fitness">
        <span class="fitness-target">@($"{Model.partida.campeonato}")</span>
    </div>
    <div id="mini-body">
        <div class="mini-row">
            <div class="mini-col">

                @Html.ScopeStyle($"#scope_{Model.partida.idExterno}", "partida-card.css")

                <div id="scope_@Model.partida.idExterno" class="w100 h100">
                    <div class="w100 h100">
                        <div class="w100 h40 df-col">
                            <div class="h80 w40 df2"><img style="display:block;" width="95%" height="95%" src="@Model.partida.timeMandante.ObterLogoLocal()" /></div>
                            <div class="h20 w100 df2 fitness"><span class='fitness-target'>@(Model.partida.timeMandante.sigla)</span></div>
                        </div>
                        <div class="w100 h20 df-row">
                            <div class="h100 w40 df2 fitness"><span class="fitness-target">@Model.partida.golsMandante</span></div>
                            <div class="h100 w20 df2"><img style="display:block;" width="95%" height="95%" src="~/img/vs.png" /></div>
                            <div class="h100 w40 df2 fitness"><span class="fitness-target">@Model.partida.golsVisitante</span></div>
                        </div>
                        <div class="w100 h40 df-col">
                            <div class="h20 w100 df2 fitness"><span class='fitness-target'>@(Model.partida.timeVisitante.sigla)</span></div>
                            <div class="h80 w40 df2"><img style="display:block;" width="95%" height="95%" src="@Model.partida.timeVisitante.ObterLogoLocal()" /></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div id="mini-footer" class="fitness">
        <span class="fitness-target">@($"{Model.partida.dataHoraDaPartida} ") <br />@($"no estádio {Model.partida.estadio}")</span>
    </div>
</div>