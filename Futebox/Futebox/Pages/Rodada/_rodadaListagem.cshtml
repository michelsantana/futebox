@model IEnumerable<Futebox.Models.PartidaVM>
@{
}
<hr />
<table class="table table-striped table-borderless table-responsive">
    <thead>
        <tr>
            <td>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="chk-all">
                </div>
            </td>
            <td colspan="2">
                Formato da Tabela
                <select name="ddlDimensao" class="form-select form-select-sm">
                    <optgroup label="defaults">
                        <option value="4x2">4 colunas x 2 linhas</option>
                        <option value="2x4">2 colunas x 4 linhas</option>
                        <option value="2x3">2 colunas x 3 linhas</option>
                    </optgroup>
                    <optgroup label="4x">
                        <option value="4x2">4 colunas x 2 linhas</option>
                        <option value="4x3">4 colunas x 3 linhas</option>
                        <option value="4x1">4 colunas x 1 linhas</option>
                    </optgroup>
                    <optgroup label="3x">
                        <option value="3x2">3 colunas x 2 linhas</option>
                        <option value="3x3">3 colunas x 3 linhas</option>
                        <option value="3x1">3 colunas x 1 linhas</option>
                    </optgroup>
                    <optgroup label="2x">
                        <option value="2x2">2 colunas x 2 linhas</option>
                        <option value="2x3">2 colunas x 3 linhas</option>
                        <option value="2x1">2 colunas x 1 linhas</option>
                    </optgroup>
                    <optgroup label="1x">
                        <option value="1x2">1 colunas x 2 linhas</option>
                        <option value="1x3">1 colunas x 3 linhas</option>
                        <option value="1x1">1 colunas x 1 linhas</option>
                    </optgroup>
                </select>
            </td>
            <td colspan="2">
            </td>
            <td>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" data-social="@((int)Futebox.Models.Enums.RedeSocialFinalidade.YoutubeShorts)" checked>
                    <label class="form-check-label" for="chk-yts">Youtube Shorts</label>
                </div>
            </td>
            <td>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" data-social="@((int)Futebox.Models.Enums.RedeSocialFinalidade.YoutubeVideo)" checked>
                    <label class="form-check-label" for="chk-ytv">Youtube Videos</label>
                </div>
            </td>
            <td>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" data-social="@((int)Futebox.Models.Enums.RedeSocialFinalidade.InstagramVideo)" checked>
                    <label class="form-check-label" for="chk-ig">Instagram</label>
                </div>
            </td>
            <td colspan="2" align="right">
                <button id="btnProcesso" class="btn btn-sm btn-dark">Processo</button>
            </td>
        </tr>
        <tr>
            <td colspan="9"><hr /></td>
        </tr>
        <tr>
            <td></td>
            <td>Campeonato</td>
            <td>Rodada</td>
            <td colspan="5" align="center">Jogo</td>
            <td>Dia</td>
        </tr>
    </thead>
    @foreach (var p in Model)
    {
        <tr>
            <td col-index="0">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="chk-@(p.idExterno)" data-id="@(p.idExterno)">
                </div>
            </td>
            <td col-index="1">
                @p.campeonato
            </td>
            <td col-index="2">
                @(p.rodada)º
            </td>
            <td col-index="3" align="right">
                @p.timeMandante.nome
            </td>
            <td col-index="4"><img src="@p.timeMandante.ObterLogoLocal()" width="40" /></td>
            <td col-index="5" align="center">x</td>
            <td col-index="6"><img src="@p.timeVisitante.ObterLogoLocal()" width="40" /></td>
            <td col-index="7" align="left">
                @p.timeVisitante.nome
            </td>
            <td col-index="8">@p.dataHoraDaPartida</td>
        </tr>
    }
</table>