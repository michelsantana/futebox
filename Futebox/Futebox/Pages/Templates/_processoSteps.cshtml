<div class="row d-flex align-items-center">
    <div class="col-1">
        @if (Model.redeSocial == Models.Enums.RedeSocialFinalidade.InstagramVideo)
        {
            <img width="100%" src="~/img/redes/ig.png" />
        }
        @if (Model.redeSocial == Models.Enums.RedeSocialFinalidade.YoutubeShorts)
        {
            <img width="100%" src="~/img/redes/yt.png" />
        }
        @if (Model.redeSocial == Models.Enums.RedeSocialFinalidade.YoutubeVideo)
        {
            <img width="100%" src="~/img/redes/yt.png" />
        }
    </div>
    <div class="col-2">
        @Model.status
    </div>
    <div class="col-7">
        <div class="progress" style="height: 20px;">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: @currentProgress.Item1.Replace(",", ".")" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
    <div class="col-2">
        <div class="btn-group" role="group">
            <button class="btn btn-sm btn-outline-primary" onclick="Play('@Model.id');">
                <object style="cursor:pointer;" data="~/img/icones/imagem.svg" width="100%" height="100%"></object>
            </button>
            <button class="btn btn-sm btn-outline-warning" onclick="Publicar('@Model.id');">
                <object style="cursor:pointer;" data="~/img/icones/audio.svg"width="100%" height="100%"></object>
            </button>
            <button class="btn btn-sm btn-outline-info" onclick="Publicar('@Model.id');">
                <object style="cursor:pointer;" data="~/img/icones/video.svg"width="100%" height="100%"></object>
            </button>
            <button class="btn btn-sm btn-outline-info" onclick="Publicar('@Model.id');">
                <object style="cursor:pointer;" data="~/img/icones/publicar.svg"width="100%" height="100%"></object>
            </button>
        </div>
    </div>
</div>
