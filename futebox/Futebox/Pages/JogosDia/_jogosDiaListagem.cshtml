@model IEnumerable<Futebox.Models.PartidaVM>
@{
    var cols = Enumerable.Range(1, 5).OrderByDescending(_ => _);
    var lines = Enumerable.Range(1, 5).OrderByDescending(_ => _);
    var calculate = true;
    var ddl = "";
    if (calculate)
        cols.ToList()
            .ForEach(c =>
            {
                ddl += $"<optgroup label='{c}x'>";
                lines.ToList()
                    .ForEach(l => ddl += $"<option value='{c}x{l}'>{c} colunas x {l} linhas</option>");
                ddl += $"</optgroup>";
            });
    else
        ddl = @"
        <optgroup label='4x'>
        <option value='4x1'>4 colunas x 1 linhas</option>
        <option value='4x2'>4 colunas x 2 linhas</option>
        <option value='4x3'>4 colunas x 3 linhas</option>
        <option value='4x4'>4 colunas x 4 linhas</option>
        </optgroup>
        <optgroup label='3x'>
        <option value='3x1'>3 colunas x 1 linhas</option>
        <option value='3x2'>3 colunas x 2 linhas</option>
        <option value='3x3'>3 colunas x 3 linhas</option>
        <option value='3x4'>3 colunas x 4 linhas</option>
        </optgroup>
        <optgroup label='2x'>
        <option value='2x1'>2 colunas x 1 linhas</option>
        <option value='2x2'>2 colunas x 2 linhas</option>
        <option value='2x3'>2 colunas x 3 linhas</option>
        <option value='2x4'>2 colunas x 4 linhas</option>
        </optgroup>
        <optgroup label='1x'>
        <option value='1x1'>1 colunas x 1 linhas</option>
        <option value='1x2'>1 colunas x 2 linhas</option>
        <option value='1x3'>1 colunas x 3 linhas</option>
        <option value='1x4'>1 colunas x 4 linhas</option>
        </optgroup>
    ";

    var socialIGV = (int)Futebox.Models.Enums.RedeSocialFinalidade.InstagramVideo;
    var socialYTV = (int)Futebox.Models.Enums.RedeSocialFinalidade.YoutubeVideo;
    var socialYTS = (int)Futebox.Models.Enums.RedeSocialFinalidade.YoutubeShorts;
}
<hr />

<table class="table table-striped table-borderless table-responsive">
    <thead>
        <tr>
            <td>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="chk-all">
                </div>
            </td>
            <td colspan="8">
            </td>
        </tr>
        <tr>
            <td></td>
            <td>Campeonato</td>
            <td>Rodada</td>
            <td colspan="5" align="center">Jogo</td>
            <td>Dia</td>
        </tr>
    </thead>
    @foreach (var p in Model)
    {
        <tr>
            <td col-index="0">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="chk-@(p.idExterno)" data-id="@(p.idExterno)">
                </div>
            </td>
            <td col-index="1">
                @p.campeonato
            </td>
            <td col-index="2">
                @(p.rodada)º
            </td>
            <td col-index="3" align="right">
                @p.timeMandante.nome
            </td>
            <td col-index="4"><img src="@p.timeMandante.ObterLogoLocal()" width="40" /></td>
            <td col-index="5" align="center">x</td>
            <td col-index="6"><img src="@p.timeVisitante.ObterLogoLocal()" width="40" /></td>
            <td col-index="7" align="left">
                @p.timeVisitante.nome
            </td>
            <td col-index="8">@p.dataHoraDaPartida</td>
        </tr>
    }
</table>
<hr />

<table class="table table-striped table-borderless table-responsive">
    <tr>
        <td colspan="2">
            <div data-config="@(socialYTV)">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="social-@(socialYTV)" data-social="@(socialYTV)">
                    <label class="form-check-label" for="social-@(socialYTV)">Youtube Videos</label>
                </div>
                <div class="input-group input-group-sm">
                    <select name='ddlDimensao' class='form-select form-select-sm'>
                        <optgroup label='defaults'>
                            <option value='4x2' selected="selected">4 colunas x 2 linhas</option>
                            <option value='2x4'>2 colunas x 4 linhas</option>
                            <option value='2x3'>2 colunas x 3 linhas</option>
                            <option value='5x2'>5 colunas x 2 linhas</option>
                        </optgroup>
                        @Html.Raw(ddl)
                    </select>
                    <button class="btn btn-outline-secondary" onclick="VisualizarMiniatura('@(socialYTV)', 1920, 1080)" type="button">Simular</button>
                </div>
                <hr />
                <div class="">
                    <span class="form-label">Titulo</span>
                    <input type="text" class="form-control form-control-sm" name="title" value="@($"Jogos {Model.First().rodada}ª Rodada - {Model.First().campeonato} {DateTime.Now.ToString("yyyy")}")">
                </div>
            </div>
        </td>
        <td colspan="2">
            <div data-config="@(socialYTS)">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="social-@(socialYTS)" data-social="@(socialYTS)">
                    <label class="form-check-label" for="social-@(socialYTS)">Youtube Shorts</label>
                </div>
                <div class="input-group input-group-sm">
                    <select name='ddlDimensao' class='form-select form-select-sm'>
                        <optgroup label='defaults'>
                            <option value='4x2'>4 colunas x 2 linhas</option>
                            <option value='2x4' selected="selected">2 colunas x 4 linhas</option>
                            <option value='2x3'>2 colunas x 3 linhas</option>
                            <option value='2x5'>2 colunas x 5 linhas</option>
                        </optgroup>
                        @Html.Raw(ddl)
                    </select>
                    <button class="btn btn-outline-secondary" onclick="VisualizarMiniatura('@(socialYTS)', 1080, 1920)" type="button">Simular</button>
                </div>
                <hr />
                <div class="">
                    <span class="form-label">Titulo</span>
                    <input type="text" class="form-control form-control-sm" name="title" value="@($"Jogos {Model.First().rodada}ª Rodada - {Model.First().campeonato} {DateTime.Now.ToString("yyyy")}")">
                </div>
            </div>
        </td>
        <td colspan="2">
            <div data-config="@(socialIGV)">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="social-@(socialIGV)" data-social="@(socialIGV)">
                    <label class="form-check-label" for="social-@(socialIGV)">Instagram Videos</label>
                </div>
                <div class="input-group input-group-sm">
                    <select name='ddlDimensao' class='form-select form-select-sm'>
                        <optgroup label='defaults'>
                            <option value='4x2'>4 colunas x 2 linhas</option>
                            <option value='2x4' selected="selected">2 colunas x 4 linhas</option>
                            <option value='2x3'>2 colunas x 3 linhas</option>
                            <option value='2x5'>2 colunas x 5 linhas</option>
                        </optgroup>
                        @Html.Raw(ddl)
                    </select>
                    <button class="btn btn-outline-secondary" onclick="VisualizarMiniatura('@(socialIGV)', 1350, 1920)" type="button">Simular</button>
                </div>
                <hr />
                <div class="">
                    <span class="form-label">Titulo</span>
                    <input type="text" class="form-control form-control-sm" name="title" value="@($"Jogos {Model.First().rodada}ª Rodada - {Model.First().campeonato} {DateTime.Now.ToString("yyyy")}")">
                </div>
            </div>
        </td>
    </tr>
    <tr>
        <td colspan="6" align="right">
            <button id="btnProcesso" class="btn btn-sm btn-dark">Processo</button>
        </td>
    </tr>
</table>