@model Futebox.Pages.MiniaturasModel.ClassificacaoHandlerModel
@{
    var w = $"{Model.width}";
    var h = $"{Model.height}";
    w = string.IsNullOrEmpty(w) ? "1920" : w;
    h = string.IsNullOrEmpty(h) ? "1080" : h;
    var vertical = int.Parse(h) > int.Parse(w);
}

<style> #mini-container { width: @($"{w}px"); height: @($"{h}px"); }</style>

@if (vertical)
{
    <style>

        #mini-container {
            position: absolute;
            top: 0;
            left: 0;
            padding: 5px;
            z-index: 999999;
        }

        #mini-header {
            font-size: 70px;
            font-weight: bold;
            text-align: center;
            height: 5%;
        }

        #mini-body {
            height: 90%;
            display: grid;
            grid-template-columns: 1fr;
            grid-gap: 1rem;
        }

        #mini-footer {
            font-weight: bold;
            text-align: center;
            height: 5%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        #mini-body table {
            font-size: 2rem;
            padding: 0 1rem;
        }

            #mini-body table tr {
                border-bottom: 1px solid #0000004a;
            }


        #mini-body tbody td {
            width: fit-content;
            text-align: center;
        }

        #mini-body tbody .s1 {
            font-size: 2.7rem;
        }

        #mini-body tbody .s2 {
            font-size: 1.8rem;
        }

        #mini-footer .bloco {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-content: space-between;
        }

        #mini-footer .legenda {
            display: grid;
            grid-template-columns: 1fr 1fr;
            text-align: left;
            font-size: 1.2rem;
            grid-gap: 1rem;
        }
    </style>
}

@if (!vertical)
{
    <style>

        #mini-container {
            position: absolute;
            top: 0;
            left: 0;
            padding: 5px;
            z-index: 999999;
        }

        #mini-header {
            font-size: 70px;
            font-weight: bold;
            text-align: center;
            height: 10%;
        }

        #mini-body {
            height: 80%;
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-gap: 1rem;
        }

        #mini-footer {
            font-weight: bold;
            text-align: center;
            height: 10%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        #mini-body table {
            font-size: 2rem;
            padding: 0 1rem;
        }

            #mini-body table tr {
                border-bottom: 1px solid #0000004a;
            }


        #mini-body tbody td {
            width: fit-content;
            text-align: center;
        }

        #mini-body tbody .s1 {
            font-size: 2.7rem;
        }

        #mini-body tbody .s2 {
            font-size: 1.8rem;
        }

        #mini-footer .bloco {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-content: space-between;
        }

        #mini-footer .legenda {
            display: grid;
            grid-template-columns: 1fr 1fr;
            text-align: left;
            font-size: 1.2rem;
            grid-gap: 1rem;
        }
    </style>
}